<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/bookIcon"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:src="@color/cardview_dark_background"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="10dp">

            <TextView
                android:gravity="right"
                android:id="@+id/matchRate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Match: 78%"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Read and Write a letter by English"
                android:paddingBottom="10dp"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Learn essential American and British English in this complete beginner audio course. This course contains: -Audio listening files -A handy phrasebook of vocabulary and phrases -Cou..."
                android:maxLines="3"
                android:textSize="10dp"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>