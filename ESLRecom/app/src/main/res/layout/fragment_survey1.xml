<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="1/ Bạn học tiếng Anh được bao lâu rồi ?"
            android:textSize="18dp"
            android:fontFamily="serif" />

        <RadioGroup
            android:id="@+id/answerGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="30dp"
            android:paddingRight="20dp">

            <RadioButton
                android:text="\tChưa từng học"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_a" />

            <RadioButton
                android:text="\tMới bắt đầu dưới 1 năm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_b" />

            <RadioButton
                android:text="\tHọc từ 1 đến 5 năm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_c" />

            <RadioButton
                android:text="\tTrên 5 năm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_d" />

            <RadioButton
                android:text="\tTiếng Anh là tiếng mẹ đẻ của tôi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer_e" />
        </RadioGroup>

    </LinearLayout>


    <TextView
        android:id="@+id/nextButton"
        android:layout_gravity="bottom|right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="60dp"
        android:text="Next"/>

</LinearLayout>