<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="5dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff">

            <ImageView
                android:id="@+id/bookIcon"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@color/cardview_dark_background"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Read and Write a letter by English"
                    android:layout_marginTop="20dp"
                    android:paddingBottom="5dp"
                    android:textColor="@color/colorDefaultText"
                    android:textStyle="bold"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="by Alex Wong"
                    android:textSize="13dp"
                    android:textColor="@color/colorDefaultText"
                    android:paddingBottom="5dp"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/publisher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Oxford ; New York, NY : Oxford University Press, 2016."
                    android:textSize="13dp"
                    android:paddingBottom="5dp"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/editionformat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Print book : English : First edition"
                    android:textSize="13dp"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSmoothText" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thông tin về cuốn sách"
            android:textStyle="bold"
            android:textColor="@color/colorDefaultText"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:fontFamily="serif"
            android:id="@+id/textView" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="5dp"
                    >

                    <TextView
                        android:id="@+id/genreform"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Genre/Form: History"
                        android:textSize="13dp"
                        android:ellipsize="end" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/docType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Document Type: Book"
                        android:textSize="13dp"
                        android:ellipsize="end" />

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:id="@+id/contentLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nội dung:"
                    android:textSize="13dp"
                    android:ellipsize="end" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="What is English? --
Origins --
Authorities --
Standards --
Varieties --
Global Englishes --
Why do we care?"
                    android:textSize="13dp"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorSmoothText" />

            <TextView
                android:id="@+id/summary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:text="Summary:\n 	Simon Horobin investigates the evolution of the English language, examining how the language continues to adapt even today, as English continues to find new speakers and new uses. Engaging with contemporary concerns about correctness, Horobin considers whether such changes are improvements--or evidence of slipping standards\--Amazon.com."
                android:textSize="13dp"
                android:ellipsize="end" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/colorSmoothText" />

            <LinearLayout
                android:id="@+id/subjectLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Chủ đề:"
                    android:textSize="13dp"
                    android:ellipsize="end" />
                <TextView
                    android:layout_marginTop="10dp"
                    android:paddingLeft="10dp"
                    android:id="@+id/subjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="English language -- History.
English language -- Grammar, Historical.
Historical linguistics.
English language.
Englisch.
Weltsprache.
Geschichte."
                    android:textSize="13dp"
                    android:ellipsize="end" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorSmoothText" />

        <TextView
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Xây dựng profile sách"
            android:textStyle="bold"
            android:textColor="@color/colorDefaultText"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"
            android:ellipsize="end"
            android:fontFamily="serif"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Trình độ phù hợp để đọc:"
                android:textSize="15dp"
                android:textColor="@color/colorDefaultText"
                android:paddingBottom="5dp"
                android:ellipsize="end" />

            <RadioGroup
                android:id="@+id/levelanswerGroup1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text=" Mới học"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/l_answer_a" />

                <RadioButton
                    android:text=" Cơ bản"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/l_answer_b" />

                <RadioButton
                    android:text=" Trung bình"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/l_answer_c" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/levelanswerGroup2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text=" Nâng cao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/l_answer_d" />

                <RadioButton
                    android:text=" Thành thạo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/l_answer_e" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chủ đề về đề thi:"
                android:textSize="15dp"
                android:textColor="@color/colorDefaultText"
                android:paddingBottom="5dp"
                android:ellipsize="end" />

            <RadioGroup
                android:id="@+id/testanswerGroup1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text="Không"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/t_answer_a" />

                <RadioButton
                    android:text=" IELTS"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/t_answer_b" />

                <RadioButton
                    android:text=" TOEFL"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/t_answer_c" />

            </RadioGroup>

            <RadioGroup
                android:id="@+id/testanswerGroup2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text=" TOEIC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/t_answer_d" />

                <RadioButton
                    android:text=" iTEP"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/t_answer_e" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời lượng phù  để đọc sách:"
                android:textSize="15dp"
                android:textColor="@color/colorDefaultText"
                android:paddingBottom="5dp"
                android:ellipsize="end" />

            <RadioGroup
                android:id="@+id/timeanswerGroup"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RadioButton
                    android:text=" dưới 1h/ngày"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_weight="1"
                    android:id="@+id/tm_answer_a" />

                <RadioButton
                    android:text=" 1-3h/ngày"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tm_answer_b" />

                <RadioButton
                    android:text=" trên 3h/ngày"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/tm_answer_c" />

            </RadioGroup>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <LinearLayout
            android:background="#fff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingLeft="20dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content:"
                android:textSize="15dp"
                android:textColor="@color/colorDefaultText"
                android:paddingBottom="5dp"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <CheckBox
                    android:text="\tĐọc hiểu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_a" />

                <CheckBox
                    android:text="\tNghe hiểu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_b" />

                <CheckBox
                    android:text="\tHội thoại"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_c" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <CheckBox
                    android:text="\tPhát âm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_d"
                    android:layout_weight="1"/>

                <CheckBox
                    android:text="\tTừ vựng"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_e"
                    android:layout_weight="1"/>

                <CheckBox
                    android:text="\tNgữ pháp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/answer_f"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
            <CheckBox
                android:text="\tViết văn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_g" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/colorSmoothText" />

        <Button
            android:id="@+id/saveButton"
            android:theme="@style/ColoredButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu book profile"
            style="@style/ColoredButton"
            android:textAllCaps="false" />

    </LinearLayout>
</ScrollView>