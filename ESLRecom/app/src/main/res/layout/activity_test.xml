<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:autofit="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:animateLayoutChanges="true">

        <android.support.v7.widget.CardView
            android:animateLayoutChanges="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/testProfile"
                android:visibility="gone"
                android:paddingTop="20dp"
                android:paddingBottom="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="300dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_marginTop="5dp"
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/userName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="serif"
                            android:gravity="center"
                            android:text="Viet Duc Hoang" />

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/avatar"
                            android:layout_marginTop="10dp"
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:src="@drawable/ava_placeholder"/>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_marginLeft="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nội dung"
                            android:textSize="13dp"
                            android:textAllCaps="true" />

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="8dp"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#E0E0E0"
                            android:layout_gravity="center"/>

                        <me.grantland.widget.AutofitTextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text=""
                            android:maxLines="3"
                            android:id="@+id/question"
                            android:textSize="30dp"
                            autofit:minTextSize="18dp"
                            android:textColor="@color/colorBolderText"/>


                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:paddingTop="7dp"
                    android:paddingBottom="15dp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Câu hỏi"
                            android:textSize="13dp"
                            android:textAllCaps="true" />

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#E0E0E0"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/questionNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textSize="25dp"
                            android:textAllCaps="true" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="18dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Chủ đề"
                            android:textSize="13dp"
                            android:textAllCaps="true" />

                        <View
                            android:layout_marginTop="3dp"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="9dp"
                            android:layout_width="match_parent"
                            android:layout_height="2px"
                            android:background="#E0E0E0"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/subject"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="10dp"
                            android:textSize="20dp"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:id="@+id/summaryProfile"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/sumUserName"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Nguyễn Xuân Bách"
                                android:textStyle="bold"
                                android:textSize="18dp" />

                            <TextView
                                android:id="@+id/sumEmail"
                                android:layout_marginTop="8dp"
                                android:layout_marginBottom="15dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="phubknic@gmail.com"
                                android:textSize="12dp" />

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/sumAva"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:src="@drawable/ava_placeholder"/>

                        </LinearLayout>


                    <View
                        android:layout_marginTop="25dp"
                        android:layout_marginBottom="1px"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="#E0E0E0"
                        android:layout_gravity="center"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="2dp">

                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:text="@string/vocabulary"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:fontFamily="serif" />
                            <TextView
                                android:id="@+id/vocabularyProfi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="38dp"
                                android:paddingLeft="7dp"
                                android:paddingRight="5dp"
                                android:text="Chưa xác định"
                                android:gravity="center"
                                android:textSize="15dp"/>

                        </FrameLayout>
                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0"/>
                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:text="@string/grammar"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:fontFamily="serif" />
                            <TextView
                                android:id="@+id/grammarProfi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="38dp"
                                android:paddingLeft="7dp"
                                android:paddingRight="5dp"
                                android:text="Chưa xác định"
                                android:gravity="center"
                                android:textSize="15dp"/>

                        </FrameLayout>

                        <View
                            android:layout_width="1px"
                            android:layout_height="match_parent"
                            android:background="#E0E0E0"/>
                        <FrameLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="10dp"
                                android:gravity="center"
                                android:text="@string/reading"
                                android:paddingLeft="5dp"
                                android:paddingRight="5dp"
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:fontFamily="serif" />
                            <TextView
                                android:id="@+id/readingProfi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:paddingTop="38dp"
                                android:paddingLeft="7dp"
                                android:paddingRight="5dp"
                                android:text="Chưa xác định"
                                android:gravity="center"
                                android:textSize="15dp"/>

                        </FrameLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_marginBottom="10dp"
                        android:layout_height="1px"
                        android:background="#E0E0E0"
                        android:layout_gravity="center"/>

                    <Button
                        android:layout_marginBottom="5dp"
                        android:id="@+id/learnButton"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="170dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Bắt đầu kiểm tra"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="serif" />

                    <Button
                        android:visibility="gone"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/backButton"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_width="130dp"
                        android:layout_height="50dp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Hoàn tất"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/blue"
                        android:fontFamily="serif" />
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <com.hedspi.hoangviet.eslrecom.libraries.NonSwipeableViewPager
                android:id="@+id/viewPager"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="8dp">

            </com.hedspi.hoangviet.eslrecom.libraries.NonSwipeableViewPager>
        </FrameLayout>

    </LinearLayout>

</FrameLayout>