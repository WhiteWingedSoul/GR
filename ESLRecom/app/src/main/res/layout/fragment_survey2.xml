<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_marginTop="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="2/ Trình độ đọc hiểu của bạn thế nào ?"
            android:textSize="18dp"
            android:fontFamily="serif" />

        <RadioGroup
            android:id="@+id/answerGroup"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:paddingLeft="30dp"
            android:paddingRight="20dp">

            <RadioButton
                android:text="\tHoàn toàn không đọc được"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_a" />

            <RadioButton
                android:text="\tHiểu được những câu văn đơn giản rời rạc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_b" />

            <RadioButton
                android:text="\tHiểu được đoạn văn ngắn có cấu trúc ngữ pháp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_c" />

            <RadioButton
                android:text="\tNắm được nội dung bài viết tiếng Anh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:id="@+id/answer_d" />

            <RadioButton
                android:text="\tĐọc được tài liệu chuyên ngành bằng tiếng Anh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/answer_e" />
        </RadioGroup>

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/backButton"
            android:layout_gravity="bottom|left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="60dp"
            android:text="Back"/>

        <TextView
            android:id="@+id/nextButton"
            android:layout_gravity="bottom|right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="60dp"
            android:text="Next"/>
    </FrameLayout>


</LinearLayout>